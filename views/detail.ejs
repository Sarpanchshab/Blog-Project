<%-include('./admin/header.ejs') %>

<section class="blog-detail mt-4 mb-4">
    <div class="container">
        <div class="row g-4">

            <!-- Blog Content -->
            <div class="col-lg-8 col-md-12">
                <div class="blog-left">
                    <div class="posted-on">
                        <h1 class="mb-3"><%= d.title %></h1>
                        <p class="text-muted">by <span class="fw-bold">RSGiTECH</span> on <span><%= d.createdAt.toLocaleDateString() %></span></p>
                    </div>
                    <img src="<%= d.image.url %>" alt="blog1" class="img-fluid mb-4" />
                    <p><%= d.description %></p>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4 col-md-12">
                <div class="blog-right">

                    <!-- Recent Blogs -->
                    <div class="right-widget recent-post mb-4">
                        <h3 class="mb-3">Recent Blogs</h3>
                        <% r.forEach((recentitem) => { %>
                        <a href="#" class="text-decoration-none text-dark">
                            <div class="rb-box d-flex align-items-center mb-3">
                                <div class="rb-box-img me-3">
                                    <img src="<%= recentitem.image.url %>" alt="blog1" class="img-fluid rounded" style="width: 100px; height: auto;">
                                </div>
                                <div class="rb-box-desc text-truncate" style="max-width: calc(100% - 120px);">
                                    <h4 class="h6 mb-1 text-truncate"><%= recentitem.title %></h4>
                                    <p class="text-muted small mb-0"><%= recentitem.createdAt.toLocaleDateString() %></p>
                                </div>
                            </div>
                        </a>
                        <% }) %>
                    </div>

                    <!-- Categories -->
                    <div class="right-widget categories">
                        <h3 class="mb-3">Categories</h3>
                        <ul class="list-unstyled">
                            <% c.forEach((categoryitem)=>{ %>

                                <li><a href="#" class="text-decoration-none text-dark"><%= categoryitem.category %></a></li>

                           <% }) %>
                            
                            <li><a href="#" class="text-decoration-none text-dark">Design</a></li>
                            
                        </ul>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>

<%-include('./admin/footer') %>
