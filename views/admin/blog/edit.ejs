<%-include('../header.ejs') %>

  <section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <%-include('../admin-sidebar.ejs')%>

                <div class="col-md-9">
                  <div class="dash-right px-5 p-black">
                    <div>
                      <h1 class="d-flex justify-content-center">Blog Update</h1>
                    </div>
                
                    <div class="mtb-30">
                      <form action="/admin/blogupdate/<%= edit._id %>" method="post" enctype="multipart/form-data">
                        
                        <div class="mb-3">
                          <label for="title" class="font-weight-bold">Title</label>
                          <input type="text" class="form-control border border-black" id="title" name="title" value="<%= edit.title %>">
                        </div>
              
                        <div class="mb-3">
                          <label for="description" class="font-weight-bold">Description</label>
                          <textarea class="form-control border border-black" id="description" name="description" cols="30" rows="10"><%- edit.description %></textarea>
                        </div>
              
                        <div class="mb-3">
                          <label for="">Upload Image</label>
                          <input type="file" name="image" class="form-control">
                        </div>
                        <img src="<%= edit.image.url %>" alt width="150px">
              
                        <div>
                          <button type="submit" class="btn btn-primary bg-blue-500">Update</button>
                        </div>
                        
                      </form>
                    </div>
                  </div>
                </div>

            </div>
        </div>
    </div>
</section>


  



    <%-include('../footer.ejs') %>